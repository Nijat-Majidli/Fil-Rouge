{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-8">
                <h4 class="text-center my-4">Réinitialisez votre mot de passe</h4>
                
                {{ form_start(requestForm) }}
                    {{ form_row(requestForm.email) }}
                    <div>
                        <small>
                            Veuillez entrer votre adresse e-mail avec laquelle vous vous 
                            êtes inscrit chez nous. Nous vous enverrons ensuite un lien 
                            que vous pourrez utiliser pour définir un nouveau mot de passe.
                        </small>
                    </div>
                    <div class="text-center">
                        <button class="btn btn-primary my-4">Envoyer</button>
                    </div>
                {{ form_end(requestForm) }}
            </div>
        </div>
    </div>
{% endblock %}
